<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppPrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="backgroundTint">#0E394B</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="AppDangerButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="backgroundTint">#E53935</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="AppDangerButtonOutlined" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#E53935</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="backgroundTint">#FBE5E5</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- Large buttons similar to Login screen -->
    <style name="AppPrimaryLargeButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">203dp</item>
        <item name="android:layout_height">78dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">#0E394B</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="AppDangerLargeButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">203dp</item>
        <item name="android:layout_height">78dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">#E53935</item>
        <item name="android:elevation">10dp</item>
    </style>
</resources>
