<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.call.PrivateVideoCallActivity"
    android:background="@color/background_primary">

    <!-- Remote user video (full screen) -->
    <FrameLayout
        android:id="@+id/fl_remote_video"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Remote video frame -->
        <ImageView
            android:id="@+id/iv_remote_video_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <!-- Remote user placeholder (avatar when video off) -->
        <LinearLayout
            android:id="@+id/ll_remote_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#2A2A2A"
            android:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_remote_avatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_profile_placeholder"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="3dp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Local user video (small overlay at top right) -->
    <FrameLayout
        android:id="@+id/fl_local_video"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="16dp"
        android:background="@android:color/black"
        android:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Local video frame -->
        <ImageView
            android:id="@+id/iv_local_video_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <!-- Local user placeholder (avatar when video off) -->
        <LinearLayout
            android:id="@+id/ll_local_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#2A2A2A"
            android:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_local_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_profile_placeholder"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="2dp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Call controls at bottom (overlay on remote view) -->
    <LinearLayout
        android:id="@+id/call_controls_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_container"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Call duration (moved from top bar) -->
        <TextView
            android:id="@+id/tv_call_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginEnd="16dp" />

        <!-- Mute button -->
        <ImageButton
            android:id="@+id/btn_mute"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_call_action_gradient"
            android:src="@drawable/ic_mic"
            android:scaleType="centerInside"
            android:padding="12dp"
            app:tint="@android:color/white" />

        <!-- Camera toggle button -->
        <ImageButton
            android:id="@+id/btn_camera_toggle"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_call_action_gradient"
            android:src="@drawable/ic_video_call"
            android:scaleType="centerInside"
            android:padding="12dp"
            app:tint="@android:color/white" />

        <!-- Switch camera button -->
        <ImageButton
            android:id="@+id/btn_switch_camera"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_call_action_gradient"
            android:src="@drawable/ic_switch_camera"
            android:scaleType="centerInside"
            android:padding="12dp"
            app:tint="@android:color/white" />

        <!-- End call button -->
        <ImageButton
            android:id="@+id/btn_end_call"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/button_call_end"
            android:src="@drawable/ic_end_call"
            android:padding="16dp"
            android:scaleType="centerInside"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Loading overlay -->
    <LinearLayout
        android:id="@+id/loading_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CC000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminateTint="@android:color/white" />

        <TextView
            android:id="@+id/tv_loading_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connecting to call..."
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
