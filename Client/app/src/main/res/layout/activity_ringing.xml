<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.call.RingingActivity"
    android:background="@color/background_primary">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- Call type indicator -->
    <TextView
        android:id="@+id/tv_call_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incoming Video Call"
        android:textSize="32sp"
        android:textStyle="bold"
                    android:textColor="@color/black"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Caller info card -->
    <LinearLayout android:id="@+id/caller_info_card"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_call_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/rounded_container">

            <!-- Animated caller avatar -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_caller_avatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/ic_profile_placeholder"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="4dp" />

            <TextView
                android:id="@+id/tv_caller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_caller_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="is calling you..."
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <!-- Call duration (for outgoing calls) -->
            <TextView
                android:id="@+id/tv_call_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <!-- Swipe Action Card -->
    <LinearLayout android:id="@+id/swipe_action_card"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/caller_info_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Swipe Instructions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swipe to answer or decline"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:gravity="center" />

            <!-- Swipe Track Container -->
            <FrameLayout
                android:id="@+id/swipe_track"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:background="@drawable/swipe_track_background">

                <!-- Accept Zone (Right side) -->
                <View
                    android:id="@+id/accept_zone"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/swipe_accept_zone"
                    android:alpha="0.3" />

                <!-- Decline Zone (Left side) -->
                <View
                    android:id="@+id/decline_zone"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:background="@drawable/swipe_decline_zone"
                    android:alpha="0.3" />

                <!-- Swipe Thumb -->
                <FrameLayout
                    android:id="@+id/swipe_thumb"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/swipe_thumb_background"
                    android:elevation="8dp">

                    <!-- Phone Icon in thumb -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_call"
                        app:tint="@color/text_primary" />

                </FrameLayout>

                <!-- Accept Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="20dp"
                    android:text="Accept"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Decline Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="20dp"
                    android:text="Decline"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- Ringing animation overlay -->
    <FrameLayout
        android:id="@+id/ringing_animation_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <!-- Animated ripple effect -->
        <View
            android:id="@+id/ripple_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_ripple_ring"
            android:alpha="0.3" />

        <View
            android:id="@+id/ripple_2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_ripple_ring"
            android:alpha="0.2" />

        <View
            android:id="@+id/ripple_3"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_ripple_ring"
            android:alpha="0.1" />

    </FrameLayout>

    <!-- Call info overlay (for outgoing calls) -->
    <LinearLayout
        android:id="@+id/outgoing_call_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_call_info_overlay"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/caller_info_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calling..."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ringing_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ringing"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
