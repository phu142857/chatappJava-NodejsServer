<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:fitsSystemWindows="true"
    android:paddingStart="12dp"
    android:paddingTop="11dp"
    android:paddingEnd="12dp"
    android:paddingBottom="11dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_profile_placeholder"
            app:civ_border_width="2dp"
            app:civ_border_color="#E0E0E0" />

        <ImageView
            android:id="@+id/iv_status_indicator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_status_background"
            android:src="@drawable/ic_status_online"
            android:contentDescription="User Status" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="Henry, Arthur" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            tools:text="john.doe@example.com" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:alpha="0.5"
            android:singleLine="true"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-light"
            tools:text="Online" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_add_friend"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Add Friend"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_accept"
            android:paddingHorizontal="12dp"
            android:layout_marginEnd="8dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_secondary_action"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Secondary"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_reject"
            android:paddingHorizontal="12dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_add_chat"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_add"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            app:tint="@android:color/darker_gray"
            android:contentDescription="Start Chat"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>