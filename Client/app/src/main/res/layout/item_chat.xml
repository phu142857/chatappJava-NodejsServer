<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:fitsSystemWindows="true"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Chat Avatar -->
    <RelativeLayout
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_chat_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_profile_placeholder"
            app:civ_border_width="2dp"
            app:civ_border_color="#E0E0E0" />

        <!-- Chat Type Indicator (for groups) -->
        <ImageView
            android:id="@+id/iv_chat_type"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_group_chat"
            android:background="@android:color/white"
            android:padding="1dp"
            android:visibility="gone" />

    </RelativeLayout>

    <!-- Chat Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Chat Name and Time Row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_chat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/tv_last_message_time"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginEnd="8dp"
                tools:text="John Doe" />

            <TextView
                android:id="@+id/tv_last_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                tools:text="2m" />

        </RelativeLayout>

        <!-- Last Message and Unread Count Row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_last_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/tv_unread_count"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginEnd="8dp"
                tools:text="Hey, how are you doing?" />

            <TextView
                android:id="@+id/tv_unread_count"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_unread_count"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="3"
                tools:visibility="visible" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
