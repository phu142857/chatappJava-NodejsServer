<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#E0E0E0"
    tools:context=".ui.theme.PrivateChatActivity">

    <!-- Background geometric shapes -->
    <View
        android:layout_width="465dp"
        android:layout_height="402dp"
        android:rotation="52"
        android:alpha="0.71"
        android:background="#D9D9D9"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="465dp"
        android:layout_height="402dp"
        android:rotation="52"
        android:alpha="0.29"
        android:background="#7BCCFF"
        android:layout_marginStart="-60dp"
        android:layout_marginTop="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="715dp"
        android:layout_height="441dp"
        android:rotation="52"
        android:alpha="0.71"
        android:background="#7BCCFF"
        android:layout_marginEnd="-200dp"
        android:layout_marginTop="-100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Header Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/header_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                app:tint="@color/primary_color"
                android:contentDescription="@string/back_button_description"
                android:layout_marginEnd="16dp" />

            <!-- Profile Picture -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:src="@android:drawable/ic_menu_view"
                app:civ_border_width="2dp"
                app:civ_border_color="#E0E0E0"
                app:tint="@android:color/white" />

            <!-- Online Status Dot -->
            <ImageView
                android:id="@+id/iv_online_dot"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/ic_online_dot"
                android:layout_marginStart="-12dp"
                android:layout_marginTop="12dp" />

            <!-- User Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_chat_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/henry_arthur_name"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/online_status"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Video Call Button -->
            <ImageButton
                android:id="@+id/iv_video_call"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_video_call_button"
                android:contentDescription="@string/video_call_description"
                android:src="@drawable/ic_video_call"
                android:padding="16dp"
                android:scaleType="centerInside"
                android:elevation="4dp"
                app:tint="@android:color/white" />

            <!-- Cancel Call Button (initially hidden) -->
            <ImageButton
                android:id="@+id/iv_cancel_call"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_cancel_call_button"
                android:contentDescription="Cancel call"
                android:src="@drawable/ic_cancel_call"
                android:padding="16dp"
                android:scaleType="centerInside"
                android:elevation="4dp"
                android:visibility="gone"
                app:tint="@android:color/white" />

            <!-- More Options Button -->
            <ImageButton
                android:id="@+id/iv_more"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/more_options_description"
                android:src="@android:drawable/ic_menu_more"
                android:padding="12dp"
                app:tint="@android:color/black" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Messages Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/messages_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_card"
        app:layout_constraintBottom_toTopOf="@id/message_input_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Messages RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_messages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp"
            android:scrollbars="vertical" />

        <!-- Typing Indicator -->
        <LinearLayout
            android:id="@+id/typing_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp"
            android:visibility="gone"
            android:background="@android:color/white">

            <ProgressBar
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Typing..."
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Message Input Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/message_input_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Attach Button -->
            <ImageButton
                android:id="@+id/iv_attach"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/attach_file_description"
                android:src="@android:drawable/ic_menu_share"
                android:padding="12dp"
                app:tint="@android:color/black" />

            <!-- Message Input -->
            <EditText
                android:id="@+id/et_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext_background"
                android:gravity="center_vertical"
                android:hint="@string/message_hint"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="4"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="16sp" />

            <!-- Sticker Button -->
            <ImageButton
                android:id="@+id/iv_sticker"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/send_sticker_description"
                android:src="@android:drawable/ic_menu_edit"
                android:padding="12dp"
                app:tint="@android:color/black" />

            <!-- Record Audio Button -->
            <ImageButton
                android:id="@+id/record_audio_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/record_audio_description"
                android:src="@android:drawable/ic_btn_speak_now"
                android:padding="12dp"
                app:tint="@android:color/black" />

            <!-- Send Button -->
            <ImageButton
                android:id="@+id/iv_send"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/send_message_description"
                android:src="@android:drawable/ic_menu_send"
                android:padding="12dp"
                app:tint="@android:color/black" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>