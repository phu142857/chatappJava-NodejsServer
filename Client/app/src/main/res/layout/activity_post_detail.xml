<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary"
    tools:context=".ui.theme.PostDetailActivity">

    <!-- App Bar (Fixed at Top) -->
    <LinearLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_secondary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                android:contentDescription="Back"
                android:padding="8dp"
                app:tint="@color/text_primary" />

            <!-- Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Post"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        app:layout_constraintBottom_toTopOf="@id/ll_input_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Full Post Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_full_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/background_secondary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <!-- Header Block -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="12dp">

                        <!-- User Avatar -->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_post_avatar"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_profile_placeholder"
                            app:civ_border_color="@color/border_light"
                            app:civ_border_width="2dp" />

                        <!-- User Info -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <!-- Username and Tags (same line) -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/tv_post_username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="John Doe"
                                    android:textColor="@color/text_primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <!-- Tagged Users (on same line) -->
                                <TextView
                                    android:id="@+id/tv_post_tagged_users"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:text=""
                                    android:textColor="@color/primary_color"
                                    android:textSize="16sp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:background="?attr/selectableItemBackground"
                                    android:visibility="gone" />

                            </LinearLayout>

                            <!-- Time/Date Stamp -->
                            <TextView
                                android:id="@+id/tv_post_timestamp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 hours ago"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Three-dot Menu -->
                        <ImageButton
                            android:id="@+id/iv_post_menu"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_more"
                            android:contentDescription="Post options"
                            android:padding="8dp"
                            app:tint="@color/icon_utility" />

                    </LinearLayout>

                    <!-- Content Body -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="12dp">

                        <!-- Text Content -->
                        <TextView
                            android:id="@+id/tv_post_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="This is a sample post content."
                            android:textColor="@color/text_primary"
                            android:textSize="15sp"
                            android:lineSpacingMultiplier="1.2"
                            android:paddingBottom="8dp" />

                        <!-- Media Content Container -->
                        <FrameLayout
                            android:id="@+id/fl_post_media"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="200dp"
                            android:visibility="gone">

                            <!-- Single Image -->
                            <ImageView
                                android:id="@+id/iv_post_image"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:visibility="gone" />

                            <!-- Image Gallery (Grid) -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_post_gallery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />

                            <!-- Video Player -->
                            <FrameLayout
                                android:id="@+id/fl_post_video"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="300dp"
                                android:visibility="gone"
                                android:background="@android:color/black">

                                <ImageView
                                    android:id="@+id/iv_post_video_thumbnail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:scaleType="centerCrop"
                                    android:adjustViewBounds="true" />

                                <ImageButton
                                    android:id="@+id/iv_post_video_play"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/circle_background"
                                    android:backgroundTint="#80000000"
                                    android:src="@android:drawable/ic_media_play"
                                    android:contentDescription="Play video"
                                    app:tint="@android:color/white" />

                            </FrameLayout>

                        </FrameLayout>

                    </LinearLayout>

                    <!-- Interaction Summary -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp">

                        <!-- Likes/Reactions Count -->
                        <LinearLayout
                            android:id="@+id/ll_likes_summary"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@android:drawable/btn_star_big_on"
                                app:tint="@color/icon_like" />

                            <TextView
                                android:id="@+id/tv_likes_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="1.2K"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <!-- Comments Count -->
                        <TextView
                            android:id="@+id/tv_comments_count"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="245 comments"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="end"
                            android:layout_marginEnd="8dp" />

                        <!-- Shares Count -->
                        <TextView
                            android:id="@+id/tv_shares_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 shares"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Separator Line -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_light"
                        android:layout_marginVertical="4dp" />

                    <!-- Action Bar (Bottom of Post) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Like/React Button -->
                        <LinearLayout
                            android:id="@+id/ll_like_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:id="@+id/iv_like_icon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/btn_star_big_off"
                                app:tint="@color/icon_like" />

                            <TextView
                                android:id="@+id/tv_like_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Like"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <!-- Comment Button -->
                        <LinearLayout
                            android:id="@+id/ll_comment_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_menu_recent_history"
                                app:tint="@color/icon_comment" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Comment"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <!-- Share Button -->
                        <LinearLayout
                            android:id="@+id/ll_share_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="12dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_menu_share"
                                app:tint="@color/icon_share" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Share"
                                android:textColor="@color/text_primary"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Comments Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="8dp"
                android:paddingTop="8dp">

                <!-- Comments Header -->
                <TextView
                    android:id="@+id/tv_comments_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comments"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="12dp" />

                <!-- Loading Indicator -->
                <ProgressBar
                    android:id="@+id/progress_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginVertical="16dp" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/ll_empty_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        app:tint="@color/text_tertiary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="No comments yet"
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Be the first to comment!"
                        android:textColor="@color/text_tertiary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Comments RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:padding="8dp"
                    android:nestedScrollingEnabled="false" />

                <!-- Load More Comments Button -->
                <TextView
                    android:id="@+id/tv_load_more_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="View more comments"
                    android:textColor="@color/icon_active"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:layout_marginVertical="8dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Reply Indicator (Shows when replying) -->
    <LinearLayout
        android:id="@+id/ll_reply_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/surface_secondary"
        android:padding="12dp"
        android:visibility="gone"
        android:elevation="8dp"
        app:layout_constraintBottom_toTopOf="@id/ll_input_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_replying_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Replying to"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tv_reply_target_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/iv_cancel_reply"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close"
            android:contentDescription="Cancel reply"
            android:padding="6dp"
            app:tint="@color/text_secondary" />

    </LinearLayout>

    <!-- Comment Input Bar (Fixed at Bottom) -->
    <LinearLayout
        android:id="@+id/ll_input_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_secondary"
        android:elevation="8dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- User Avatar Thumbnail -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_comment_avatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_profile_placeholder"
            app:civ_border_color="@color/border_light"
            app:civ_border_width="1dp" />

        <!-- Text Input Field -->
        <EditText
            android:id="@+id/et_comment_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:minHeight="40dp"
            android:maxHeight="120dp"
            android:background="@drawable/rounded_container"
            android:backgroundTint="@color/surface_secondary"
            android:hint="Write a comment..."
            android:textColorHint="@color/text_hint"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:inputType="textCapSentences|textMultiLine"
            android:gravity="top|start"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:overScrollMode="always" />

        <!-- Attachment Button (Camera/Photo) -->
        <ImageButton
            android:id="@+id/iv_attach_media"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_camera"
            android:contentDescription="Attach media"
            android:padding="8dp"
            android:visibility="visible"
            app:tint="@color/text_secondary" />

        <!-- Send Button -->
        <ImageButton
            android:id="@+id/iv_send_comment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_send_circle_gradient"
            android:src="@android:drawable/ic_menu_send"
            android:contentDescription="Send comment"
            android:padding="8dp"
            android:enabled="false"
            app:tint="@android:color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

