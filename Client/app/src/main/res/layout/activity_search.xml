<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#E0E0E0"
    tools:context=".ui.theme.SearchActivity">

    <!-- Background geometric shapes -->
    <View
        android:layout_width="465dp"
        android:layout_height="402dp"
        android:rotation="52"
        android:alpha="0.71"
        android:background="#D9D9D9"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="465dp"
        android:layout_height="402dp"
        android:rotation="52"
        android:alpha="0.29"
        android:background="#7BCCFF"
        android:layout_marginStart="-60dp"
        android:layout_marginTop="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="715dp"
        android:layout_height="441dp"
        android:rotation="52"
        android:alpha="0.71"
        android:background="#7BCCFF"
        android:layout_marginEnd="-200dp"
        android:layout_marginTop="-100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search Header Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/search_header_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/search_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                app:tint="@color/primary_color"
                android:contentDescription="Back"
                android:layout_marginEnd="16dp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_edittext_background"
                    android:hint="Search by email or username"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/darker_gray"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:paddingEnd="40dp"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical" />

                <ImageButton
                    android:id="@+id/iv_clear"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:contentDescription="Clear"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:visibility="gone"
                    app:tint="@android:color/darker_gray" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/content_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/search_header_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Search Hint -->
            <LinearLayout
                android:id="@+id/tv_search_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:layout_marginBottom="16dp"
                    app:tint="#7BCCFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search for friends"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter an email address or username to find and connect with friends"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:textAlignment="center"
                    android:gravity="center" />

            </LinearLayout>

            <!-- No Results -->
            <LinearLayout
                android:id="@+id/tv_no_results"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_menu_help"
                    android:layout_marginBottom="16dp"
                    app:tint="#7BCCFF" />

                <TextView
                    android:id="@+id/tv_no_results_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No users found"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_no_results_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Try searching with a different email or username"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:textAlignment="center"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Search Results -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_search_results"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:clipToPadding="false"
                android:visibility="gone" />

            <!-- Loading Progress -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>