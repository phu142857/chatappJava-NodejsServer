<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.theme.SearchActivity">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="48sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:padding="12dp"
        app:cardCornerRadius="200dp"
        android:background="@drawable/rounded_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search Type Tabs -->
    <LinearLayout
        android:id="@+id/search_tabs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="12dp"
        android:background="@drawable/rounded_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_header_card">

        <TextView
            android:id="@+id/tab_users"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Users"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/tab_selector"
            android:textColor="@color/tab_text_selector"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tab_groups"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="My Groups"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/tab_selector"
            android:textColor="@color/tab_text_selector"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tab_discover"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Discover"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/tab_selector"
            android:textColor="@color/tab_text_selector"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Search Header Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/search_header_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="200dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/search_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@drawable/rounded_container"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                app:tint="@color/white"
                android:contentDescription="Back"
                android:layout_marginEnd="16dp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/input_pill"
                    android:hint="Search by email or username"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textColorHint="#80FFFFFF"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:paddingEnd="40dp"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical" />

                <ImageButton
                    android:id="@+id/iv_clear"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:contentDescription="Clear"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    android:visibility="gone"
                    app:tint="#80FFFFFF" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Content Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/content_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/search_tabs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_container"
            android:padding="8dp">

            <!-- Search Hint -->
            <LinearLayout
                android:id="@+id/tv_search_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:layout_marginBottom="16dp"
                    app:tint="#7BCCFF" />

                <TextView
                    android:id="@+id/tv_hint_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start searching"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_hint_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter a keyword to find results"
                    android:textSize="14sp"
                    android:textColor="#B3FFFFFF"
                    android:textAlignment="center"
                    android:gravity="center" />

            </LinearLayout>

            <!-- No Results -->
            <LinearLayout
                android:id="@+id/tv_no_results"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@android:drawable/ic_menu_help"
                    android:layout_marginBottom="16dp"
                    app:tint="#7BCCFF" />

                <TextView
                    android:id="@+id/tv_no_results_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No users found"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_no_results_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Try searching with a different email or username"
                    android:textSize="14sp"
                    android:textColor="#B3FFFFFF"
                    android:textAlignment="center"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Search Results -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_search_results"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:clipToPadding="false"
                android:visibility="gone" />

            <!-- Loading Progress -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>