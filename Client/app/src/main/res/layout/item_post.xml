<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/background_secondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header Block -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <!-- User Avatar -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_post_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_profile_placeholder"
                app:civ_border_color="@color/border_light"
                app:civ_border_width="2dp" />

            <!-- User Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <!-- Username and Tags (same line) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_post_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Tagged Users (on same line) -->
                    <TextView
                        android:id="@+id/tv_post_tagged_users"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text=""
                        android:textColor="@color/primary_color"
                        android:textSize="16sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Time/Date Stamp -->
                <TextView
                    android:id="@+id/tv_post_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours ago"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Three-dot Menu -->
            <ImageButton
                android:id="@+id/iv_post_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more"
                android:contentDescription="Post options"
                android:padding="8dp"
                app:tint="@color/icon_utility" />

        </LinearLayout>

        <!-- Content Body -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp">

            <!-- Text Content -->
            <TextView
                android:id="@+id/tv_post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is a sample post content. It can be multiline and will truncate if too long. Users can expand to see more."
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="5"
                android:ellipsize="end"
                android:paddingBottom="8dp" />

            <!-- Media Content Container -->
            <FrameLayout
                android:id="@+id/fl_post_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:visibility="gone">

                <!-- Single Image -->
                <ImageView
                    android:id="@+id/iv_post_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:visibility="gone" />

                <!-- Image Gallery (Grid) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_post_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <!-- Video Player -->
                <FrameLayout
                    android:id="@+id/fl_post_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="300dp"
                    android:visibility="gone"
                    android:background="@android:color/black">

                    <ImageView
                        android:id="@+id/iv_post_video_thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true" />

                    <ImageButton
                        android:id="@+id/iv_post_video_play"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="#80000000"
                        android:src="@android:drawable/ic_media_play"
                        android:contentDescription="Play video"
                        app:tint="@android:color/white" />

                </FrameLayout>

            </FrameLayout>

        </LinearLayout>

        <!-- Embedded Original Post (when sharing) -->
        <include
            android:id="@+id/embedded_post_card"
            layout="@layout/item_embedded_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Interaction Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <!-- Likes/Reactions Count -->
            <LinearLayout
                android:id="@+id/ll_likes_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/btn_star_big_on"
                    app:tint="@color/icon_like" />

                <TextView
                    android:id="@+id/tv_likes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="1.2K"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Comments Count -->
            <TextView
                android:id="@+id/tv_comments_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="245 comments"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="end"
                android:layout_marginEnd="8dp" />

            <!-- Shares Count -->
            <TextView
                android:id="@+id/tv_shares_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 shares"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Separator Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_light"
            android:layout_marginVertical="4dp" />

        <!-- Action Bar (Bottom of Post) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Like/React Button -->
            <LinearLayout
                android:id="@+id/ll_like_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_like_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/btn_star_big_off"
                    app:tint="@color/icon_like" />

                <TextView
                    android:id="@+id/tv_like_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Like"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp" />

            </LinearLayout>

            <!-- Comment Button -->
            <LinearLayout
                android:id="@+id/ll_comment_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_recent_history"
                    app:tint="@color/icon_comment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Comment"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp" />

            </LinearLayout>

            <!-- Share Button -->
            <LinearLayout
                android:id="@+id/ll_share_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_share"
                    app:tint="@color/icon_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Share"
                    android:textColor="@color/text_primary"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

