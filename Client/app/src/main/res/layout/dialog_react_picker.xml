<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:soundEffectsEnabled="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    android:backgroundTint="@android:color/transparent"
    android:clipToPadding="false"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/dialog_background_less_transparent">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="React"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"/>

        <!-- Emoji Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"

            android:backgroundTint="@android:color/transparent">

            <LinearLayout
                android:id="@+id/container_emojis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="6"
                android:padding="16dp"
                android:background="@drawable/rounded_container">

                <!-- Rows of emoji choices; keep simple vertical list for accessibility -->
                <TextView
                    android:id="@+id/emoji_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="👍"
                    android:textSize="28sp"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground" />
                <TextView
                    android:id="@+id/emoji_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="❤️"
                    android:textSize="28sp"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground" />
                <TextView
                    android:id="@+id/emoji_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="😂"
                    android:textSize="28sp"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground" />
                <TextView
                    android:id="@+id/emoji_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="😮"
                    android:textSize="28sp"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground" />
                <TextView
                    android:id="@+id/emoji_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="😢"
                    android:textSize="28sp"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground" />
                <TextView
                    android:id="@+id/emoji_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🔥"
                    android:textSize="28sp"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Remove Reaction Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            app:cardCornerRadius="200dp"
            android:backgroundTint="@android:color/transparent">

            <LinearLayout
                android:id="@+id/btn_remove_react"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_container">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remove Reaction"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FF6B6B"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.cardview.widget.CardView>